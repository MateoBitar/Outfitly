<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Select Items</title>
    <link rel="stylesheet" href="/css/selectItemsView.css">
    <link href="https://fonts.cdnfonts.com/css/outfit" rel="stylesheet">
</head>
<body>
    <%- include('partials/header') %>
    <div class="container">
        <h1>Select Items</h1>
        <form action="/outfitly/outfits/add-details" method="POST">
            <div class="items-grid">
                <% if (items && items.length > 0) { %>
                    <% items.forEach(item => { %>
                        <div class="item-card">
                            <input
                                type="checkbox"
                                id="item-<%= item.item_id %>"
                                name="selectedItems[]"
                                value="<%= item.item_id %>"
                            />
                            <label for="item-<%= item.item_id %>">
                                <img src="data:image/jpeg;base64,<%= item.item_image.toString('base64') %>" alt="<%= item.item_name %>">
                                <p><%= item.item_name %></p>
                            </label>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p>No items found in your wardrobe. Add items to create your outfit.</p>
                <% } %>
            </div>

            <% if (items && items.length > 0) { %>
                <button type="submit" class="done-button">Done</button>
            <% } %>
        </form>
    </div>
</body>
</html>
