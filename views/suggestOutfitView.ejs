<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Event</title>
    <link rel="stylesheet" href="/css/suggestOutfitView.css">
    <link href="https://fonts.cdnfonts.com/css/outfit" rel="stylesheet">
</head>
<body>
    <%- include('partials/header') %>
    <main>
        <h1>Pick an Outfit</h1>
        <div class="suggestion-list">
            <% if (suggestions && suggestions.length > 0) { %>
            <% suggestions.forEach(suggestion => { %>
                <div class="suggestion-card">
                    <img 
                        src="data:image/png;base64,<%= suggestion.outfit_image.toString('base64') %>" 
                        alt="Outfit Image" 
                        class="outfit-image"
                    >
                    <h3><%= suggestion.outfit_name %></h3>
                    <button onclick="location.href='/outfitly/events/create?suggest_id=<%= suggestion.suggest_id %>'">Select</button>
                </div>
            <% }); %>
            <% } else { %>
                <h4>Must create an outfit first...</h4>
            <% } %>
        </div>
    </main>
</body>
</html>